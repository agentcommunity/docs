{
  "name": "agent-community",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": "22.x"
  },
  "workspaces": [
    "apps/*"
  ],
  "pnpm": {
    "overrides": {
      "zod": "4.1.1"
    }
  },
  "scripts": {
    "build": "npm run -w @agentcommunity/docs build && npm run -w @agentcommunity/blog build",
    "dev": "concurrently -n docs,blog -c blue,magenta \"PORT=3000 npm run dev -w @agentcommunity/docs\" \"PORT=3001 npm run dev -w @agentcommunity/blog\"",
    "dev:docs": "PORT=3000 npm run -w @agentcommunity/docs dev",
    "dev:blog": "PORT=3001 npm run -w @agentcommunity/blog dev",
    "build:docs": "npm run -w @agentcommunity/docs build",
    "build:blog": "npm run -w @agentcommunity/blog build",
    "start:docs": "PORT=3000 npm run -w @agentcommunity/docs start",
    "start:blog": "PORT=3001 npm run -w @agentcommunity/blog start"
  },
  "dependencies": {
    "@fumadocs/mdx-remote": "^1.4.0",
    "@mui/icons-material": "^7.3.1",
    "class-variance-authority": "^0.7.1",
    "fumadocs-core": "15.6.4",
    "fumadocs-mdx": "^11.6.11",
    "fumadocs-ui": "15.6.4",
    "lucide-react": "^0.525.0",
    "mermaid": "^10.9.4",
    "next": "15.4.1",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/mdx": "^2.0.13",
    "@types/node": "24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "15.4.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3"
  }
}
